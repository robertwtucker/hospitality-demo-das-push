# editorconfig.org
root = true

# Baseline configuration
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Markdown and text files
[*.{md,txt}]
trim_trailing_whitespace = false
max_line_length = off
